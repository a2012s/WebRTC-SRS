<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clMeetingAction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <TextView
        android:id="@+id/tvSpeakerMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="静音"
        android:textColor="@color/white"
        app:drawableTopCompat="@drawable/av_mute_selector"
        app:layout_constraintEnd_toStartOf="@id/tvSwitchCamera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvSwitchCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="切换摄像头"
        android:textColor="@color/white"
        app:drawableTopCompat="@drawable/av_switch_camera_selector"
        app:layout_constraintBottom_toBottomOf="@id/tvSpeakerMute"
        app:layout_constraintEnd_toStartOf="@id/tvSpeaker"
        app:layout_constraintStart_toEndOf="@id/tvSpeakerMute"
        app:layout_constraintTop_toTopOf="@id/tvSpeakerMute" />

    <TextView
        android:id="@+id/tvSpeaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="扬声器"
        android:textColor="@color/white"
        app:drawableTopCompat="@drawable/av_speaker_selector"
        app:layout_constraintBottom_toBottomOf="@id/tvSpeakerMute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvSwitchCamera"
        app:layout_constraintTop_toTopOf="@id/tvSpeakerMute" />

    <TextView
        android:id="@+id/tvHangup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="挂断"
        android:textColor="@color/white"
        app:drawableTopCompat="@drawable/av_hangup_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSpeakerMute" />

</androidx.constraintlayout.widget.ConstraintLayout>